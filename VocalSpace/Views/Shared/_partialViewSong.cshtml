@for (int k = 0;k < Model.Count; k++)
{
    <div class="ranking-item">
        <img src="~/image/idol.jpg" class="cover-block" alt="song cover">
        <div class="info">
            <p><a href="#">@Model[k].SongName</a></p>
            <p><a class="artist" href="#">@Model[k].Artist</a></p>
        </div>
        @await Html.PartialAsync("_SongButtonModal")
    </div>
}

