@model IEnumerable<VocalSpace.Models.ViewModel.Global.CommentViewModel>
<style>
	.comment-wrapper {
		width: 100%;
		height: 100%;
	}

	/* 第一行：頭像 + 輸入框 + 圖示 */

	.comment-avatar {
		display: flex;
		margin-right: 10px;
	}

		.comment-avatar img {
			width: 40px;
			height: 40px;
			border-radius: 50%;
			object-fit: cover;
		}

	.comment-input {
		flex: 1;
		/* 讓輸入框自動撐滿剩餘空間 */
		padding: 8px;
		border: 1px solid #ccc;
		border-radius: 8px;
		font-size: 14px;
		outline: none;
	}

	.list-container {
		display: flex; 
		justify-content: space-between; 
		align-items: center;
	}
</style>


<div class="comment-wrapper">
	<div class="comment-list">
		@foreach (var comment in Model)
		{
			<div class="comment-container list-container mb-3">
				<div class="d-flex">
					<div class="comment-avatar">
						<img src="@comment.Avatar" alt="User1">
					</div>
					<div class="comment-content">
						<a href="#" class="comment-header">@comment.Account</a>
						<p class="comment-body">@comment.Comment</p>
						<p class="opacity-50">@comment.CommentTime.ToString("yyyy-MM-dd")</p>
					</div>
				</div>
				@if (comment.Account == comment.CurrentUserAccount)
				{
					<button class="btn btn-outline-secondary delete-comment"
							data-comment-id="@comment.CommentId">
						<i class="bi bi-trash"></i>
					</button>
				}
			</div>
		}
	</div>
</div>
