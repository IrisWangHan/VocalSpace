@model VocalSpace.Models.ViewModel.Global.SongButtonViewModel
@{
}
<div>
    <button class="btn btn-outline-secondary btn-add-to-playlist add" data-songid="@Model.SongId"><i class="bi bi-plus-lg"></i></button>
    <button class="btn btn-outline-secondary btn-share-song share" data-songid="@Model.SongId"><i class="bi bi-share"></i></button>
    <button class="btn btn-outline-secondary heart btn-add-to-Likesong  @(Model.isliked? "selected":"")" data-songid="@Model.SongId"><i class="bi bi-heart-fill"></i><span class="likeCount" data-songid="@Model.SongId">@Model.LikeCount</span></button>
    <button class="btn btn-outline-secondary btn-play play" data-songid="@Model.SongId" data-songname="@Model.SongName"><i class="bi bi-play"></i></button>
</div>
