<title>聲維宇宙排行榜</title>
@* <div class="cbg"></div> *@
<div class="page-container">
	<div class="top-container container">
		<!-- 左側圖片區域 -->
		<div class="col-md-4 songpfp">
			<img src="/image/song1exp.jpeg">
		</div>
		<!-- 右側音樂介紹區域 -->
		<div class="row col-md-8 songinfo">
			<h1 class="cols-1">音樂標題</h1>
			<div class="cols-3 song-prop-row opacity-75">
				<div class="col-6">
					<a href="#"><strong>音樂類別</strong></a>
				</div>
				<div class="col-6">
					<a href="#"><strong>專輯名稱</strong></a>
				</div>
			</div>
			<div class="cols-2">
				<div class="row-item">
					<ul class="list-inline opacity-75">
						<li class="list-inline-item">
							<h4 class="fs-6">播放次數</h4>
							<h4>0</h4>
						</li>
						<li class="list-inline-item">
							<h4 class="fs-6">喜歡</h4>
							<h4>0</h4>
						</li>
					</ul>
					<div class="ui-button">
						@await Html.PartialAsync("_Songdetail_ButtonUI")
					</div>
				</div>
			</div>
		</div>
	</div>
	<!-- 放在圖片下方的歌手資訊 -->
	<div class="bottom-container container">
		<div class="left-container row col-4">
			<div class="userinfo row">
				<div class="col-3 nopad">
					<img src="/image/song1exp.jpeg">
				</div>
				<div class="col-6 nopad">
					<img src="/image/song1exp.jpeg">
				</div>
				<div class="col-3 nopad">
					<img src="/image/song1exp.jpeg">
				</div>
			</div>
			<div class="col-8">
				<img src="/image/song1exp.jpeg">
			</div>
		</div>
		<div class="right-container row col-8">
			<div class="col-4">
				<img src="/image/song1exp.jpeg">
			</div>
			<div class="col-8">
				<img src="/image/song1exp.jpeg">
			</div>
		</div>
	</div>
</div>