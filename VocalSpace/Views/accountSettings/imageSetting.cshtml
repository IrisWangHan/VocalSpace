@{
}
<link rel="stylesheet" href="~/css/memberInformation.css" asp-append-version="true" />

<section>
    <div class="container">
        <h1>帳號設定</h1>
        <hr>
        <div class="row">
            @await Html.PartialAsync("partialViewAccountSettings")
            <div class="col-md-8 col-lg-8">
                <form>
                    <div class="form-group">
						<h2>頭像與封面</h2>
					</div>
                    <div class="form-group">
                        <h3>頭像</h3>
                        <small class="form-text text-muted mb-2">建議尺寸：360x360px 以上，圖片檔案大小不可超過 2MB</small>
                    </div>
					<div class="form-group">
                        <div class="d-flex flex-column">
                            <div id="avatar" style="width:20vw; height:20vw;">
                                 <img src="~/image/Eevee.png" alt="大頭貼" class="img-thumbnail"> 
                            </div>
                            <div>
                                <button class="btn btn-primary">上傳頭像</button>
						    </div>
                        </div>				
                    </div>
                    <div class="form-group">
                        <h3>封面</h3>
                        <small class="form-text text-muted mb-2">建議尺寸：1920x360px 以上，圖片檔案大小不可超過 2MB</small>
                    </div>
                    <div class="form-group">
                        <div class="d-flex flex-column">
                            <div>
                                <img src="~/image/Eevee-Cover.jpg" alt="封面" class="img-thumbnail">
                            </div>
                            <div>
                                <button class="btn btn-primary">上傳封面</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div></>
        </div>
   </div>
</section>